    "version": "0.2.0",
    "configurations": [
        {
            "name": "Next.js: Run hotel-cafe-nextjs (dev)",
            "type": "pwa-node",
            "request": "launch",
            "cwd": "${workspaceFolder}/hotel-cafe-nextjs",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"],
            "env": {
                "NODE_ENV": "development"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "serverReadyAction": {
                "pattern": "Local:.*http://localhost:(\\d+)|Listening on.*:(\\d+)",
                "uriFormat": "http://localhost:%s",
                "action": "openExternally"
            }
        }
    ]
}